.list {
  display: flex;
  flex-direction: column;
}

.content {
  padding-top: 3vh;
}

.content-box {
  display: flex;
  justify-content: space-between;
  color: #6d6d6d;
  font-size: 2.6vh;
  height: 13.3vh;
  border-bottom: 1px solid #d4d4d4;
  padding: 0 2.5vh;
}

.content-left {
  display: flex;
  flex-direction: column;
  flex: 3;
}
.content-left > view {
  padding-top: 1.8vh;
}
.shop {
  color: #000000;
  font-size: 2.8vh;
  width: 54vw;
  /* 强制文本在一行内显示 */
  white-space: nowrap;
  /* 内容会被修剪，但是浏览器会显示滚动条，以便查看其余的内容 */
  overflow: scroll;
  /* 超出文本隐藏并使用省略号代替 */
  /* overflow: hidden;
  text-overflow: ellipsis; */
}
.shop > text {
  color: #6d6d6d;
  font-size: 2.6vh;
}

.content-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 2;
} 

.content-right >view:first-child {
  border: 1.5px solid #ff9c35;
  color: #ff3c3c;
  height: 5vh;
  width: 18vw;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 2.6vh;
}

.takened {
  background-color: #ff9c35;
  color: #fff;
  height: 6vh;
  width: 16vw;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 1.8vw;
  margin-top: 0.4vh;
}

.takening {
  background-color: #cccccc;
  color: #555555;
  height: 6vh;
  width: 16vw;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 1.8vw;
  margin-top: 0.4vh;
}